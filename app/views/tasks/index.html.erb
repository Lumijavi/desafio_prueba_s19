<div class="card-columns">
  <% @tasks.each do |task| %>
    <div class="card">
      <% if task.completed_tasks.exists? %>
        <%= image_tag task.photo, class: "card-img-top" %>
      <% else %>
        <%= image_tag task.photo, class: "card-img-top filtered" %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= task.name %></h5>
        <p class="card-text"><%= task.description %></p>
        <% if task.completed_tasks.exists? %>
          <small class="text-muted">Last updated <%= time_ago_in_words(task.completed_tasks.first.updated_at)%> ago</small>
        <% else %>
          <small class="text-muted">Not completed yet.</small>
        <% end %>
        <br>
        <div class="mt-3">
          <% if task.completed_tasks.exists? %>
            <%= link_to "NO Listo", task_completed_task_path(task, current_user), method: :delete , class: 'btn btn-danger' %>
          <% else %>
            <%= link_to "Listo", task_completed_tasks_path(task), method: :post, class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
