<div class="card-columns">
  <% @tasks.each do |task| %>
    <div class="card">
      <% if user_signed_in? %>
        <%= image_tag task.photo, class: "card-img-top filtered" %>
      <% else %>
        <%= image_tag task.photo, class: "card-img-top" %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= task.name %></h5>
        <p class="card-text"><%= task.description %></p>
        <small class="text-muted">Last updated <%= time_ago_in_words(task.updated_at)%> ago</small>
        <br>
        <div class="mt-3">
          <button type="button" class="btn btn-primary">Listo</button>
          <button type="button" class="btn btn-danger">NO Listo</button>
        </div>
      </div>
    </div>
  <% end %>
</div>
